<%- include('../partials/header') %>

<form id="new-form" action="/ideas/<%= idea._id %>?_method=PUT" enctype="multipart/form-data" method="post">
    <div class="image"><img src="<%= idea.image %>" alt="picture"></div>
    <input type="file" name="image">
    <label>Title:</label>
    <input type="text" name="title" value="<%= idea.title %>" required>
    <br><br>
    <label>Content:</label>
    <textarea name="content" required><%= idea.content %></textarea>
    <br><br>
    <button type="submit">Update Idea</button>
</form>

<%- include('../partials/footer') %>
